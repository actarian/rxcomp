{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"target": "es2019",
		"baseUrl": "",
		"outDir": "lib",
		"mapRoot": "./",
		"module": "ES2015",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": false,
		"importHelpers": true
	},
	"exclude": [
	  "node_modules",
	  ".npm"
	]
}
