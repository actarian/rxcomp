{
	"targets": {
		"browser": {
			"compile": [{
				"input": "test/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "test/js/main.js",
				"output": "docs/js/main.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}, {
				"input": "test/js/test.for.js",
				"output": "docs/js/test.for.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}, {
				"input": "test/js/test.parsing.js",
				"output": "docs/js/test.parsing.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}, {
				"input": "test/js/test.pipes.js",
				"output": "docs/js/test.pipes.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}, {
				"input": "test/js/test.scope.js",
				"output": "docs/js/test.scope.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}],
			"bundle": []
		},
		"dist": {
			"compile": [{
				"input": "src/rxcomp.js",
				"output": "dist/rxcomp.js",
				"rollup": {
					"name": "rxcomp",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": true
			}],
			"bundle": []
		}
	},
	"options": {
		"tfs": false,
		"server": {
			"src": "./docs",
			"path": "/rxcomp/",
			"host": "localhost",
			"port": 40999
		}
	}
}
