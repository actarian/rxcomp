{
	"targets": {
		"browser": {
			"compile": [{
				"input": "test/*.html",
				"output": "docs/",
				"minify": true
			}, {
				"input": "test/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "test/js/main.ts",
				"output": {
					"file": "docs/js/main.js",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": false
			}, {
				"input": "test/js/test.for.ts",
				"output": {
					"file": "docs/js/test.for.js",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": false
			}, {
				"input": "test/js/test.parsing.ts",
				"output": {
					"file": "docs/js/test.parsing.js",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": false
			}, {
				"input": "test/js/test.pipes.ts",
				"output": {
					"file": "docs/js/test.pipes.js",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": false
			}, {
				"input": "test/js/test.scope.ts",
				"output": {
					"file": "docs/js/test.scope.js",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				},
				"minify": false
			}],
			"bundle": []
		},
		"dist": {
			"compile": [{
				"input": "src/rxcomp.ts",
				"output": [{
					"file": "dist/es6/rxcomp.js",
					"name": "rxcomp",
					"format": "es",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				}, {
					"file": "dist/iife/rxcomp.js",
					"name": "rxcomp",
					"format": "iife",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				}, {
					"file": "dist/umd/rxcomp.js",
					"name": "rxcomp",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators"
					},
					"external": ["rxjs"]
				}],
				"minify": true
			}],
			"bundle": []
		}
	},
	"tfs": false,
	"server": {
		"root": "./docs",
		"path": "/rxcomp/",
		"host": "localhost",
		"port": 40999,
		"log": false
	}
}
