{
	"targets": {
		"browser": {
			"compile": [{
				"input": "test/*.html",
				"output": "docs/",
				"minify": true
			}, {
				"input": "test/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "test/js/main.ts",
				"output": "docs/js/main.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": false
			}, {
				"input": "test/js/test.for.ts",
				"output": "docs/js/test.for.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": false
			}, {
				"input": "test/js/test.parsing.ts",
				"output": "docs/js/test.parsing.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": false
			}, {
				"input": "test/js/test.pipes.ts",
				"output": "docs/js/test.pipes.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": false
			}, {
				"input": "test/js/test.scope.ts",
				"output": "docs/js/test.scope.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": false
			}],
			"bundle": []
		},
		"dist": {
			"compile": [{
				"input": "src/rxcomp.ts",
				"output": "dist/rxcomp.js",
				"rollup": {
					"output": {
						"name": "rxcomp",
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators"
						},
						"external": ["rxjs"]
					}
				},
				"minify": true
			}],
			"bundle": []
		}
	},
	"tfs": false,
	"server": {
		"root": "./docs",
		"path": "/rxcomp/",
		"host": "localhost",
		"port": 40999,
		"log": false
	}
}
